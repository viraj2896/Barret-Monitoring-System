<div id="sensorFormSuccessAlert" style="display: none" class="alert alert-success" role="alert">
  Success! 
</div>
<form id="sensorsForm">
  <input type="hidden" class="form-control" id="inputSensorId" value="{{sensor._id}}">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputSensorName" value="{{sensor.name}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="position" class="col-sm-2 col-form-label">Postion</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputSensorPosition" value="{{sensor.position}}">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputSelectRoom" class="col-sm-2 col-form-label">Room</label>
    <div class="col-sm-10">
      <input type="hidden" id="inputHiddenRoomId" value="{{sensor.room._id}}">
      <select class="custom-select" id="inputSelectRoom">
        <option>Choose...</option>
        {{#each organization.rooms}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputSelectGateway" class="col-sm-2 col-form-label">Gateway</label>
    <div class="col-sm-10">
      <input type="hidden" id="inputHiddenGatewayId" value="{{sensor.gateway._id}}">
      <select class="custom-select" id="inputSelectGateway">
          <option selected>Choose...</option>
          {{#each organization.gateways}}
              <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
      </select>
    </div>
  </div>
  <button id="btnUpdateSensor" type="button" class="btn btn-primary">Update</button>
  <button id="btnDeleteSensor" type="button" class="btn btn-danger">Delete</button>
  <button id="btnAddSensor" type="button" class="btn btn-primary">Add</button>
</form>