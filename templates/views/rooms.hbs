<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      {{#each rooms}}
        <a id="{{id}}" class="list-group-item list-group-item-action" onclick="loadUpdateRoomForm('{{this.id}}')" data-toggle="list" href="#list-room" aria-controls="room">{{this.name}}</a>
      {{/each}}
        <a class="list-group-item list-group-item-action lastNode" onclick="loadAddRoomForm()" data-toggle="list" href="#add-new-room" role="tab" aria-controls="room">Add new</a>
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div id="roomFormSuccessAlert" style="display: none" class="alert alert-success" role="alert">
        Success! 
      </div>
      <div id="divRoomForm">
        <form>
          <input type="hidden" class="form-control" id="inputRoomId">
          <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputRoomName">
            </div>
          </div>
          <div class="form-group row">
            <label for="width" class="col-sm-2 col-form-label">Width</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputRoomWidth">
            </div>
          </div>
          <div class="form-group row">
            <label for="length" class="col-sm-2 col-form-label">Length</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputRoomLength">
            </div>
          </div>
          <button id="btnUpdateRoom" type="button" class="btn btn-primary">Update</button>
          <button id="btnDeleteRoom" type="button" class="btn btn-danger">Delete</button>
          <button id="btnAddRoom" style="display: none;" type="button" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>

