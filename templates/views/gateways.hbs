<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      {{#each gateways}}
        <a id={{this.id}} class="list-group-item list-group-item-action" onclick="loadUpdateGatewayForm('{{this.id}}')" data-toggle="list" href="#list-gateway" aria-controls="gateway">{{this.name}}</a>
      {{/each}}
        <a class="list-group-item list-group-item-action lastNode" onclick="loadAddGatewayForm()" data-toggle="list" href="#add-new-gateway" role="tab" aria-controls="gateway">Add new</a>
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div id="gatewayFormSuccessAlert" style="display: none" class="alert alert-success" role="alert">
        Success! 
      </div>
      <div id="divGatewayForm">
        <form>
          <input type="hidden" class="form-control" id="inputGatewayId">
          <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputGatewayName">
            </div>
          </div>
          <div class="form-group row">
            <label for="ip" class="col-sm-2 col-form-label">Ip</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputGatewayIp">
            </div>
          </div>
          <button id="btnUpdateGateway" type="button" class="btn btn-primary">Update</button>
          <button id="btnDeleteGateway" type="button" class="btn btn-danger">Delete</button>
          <button id="btnAddGateway" style="display: none;" type="button" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>